<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".MainActivity2">

        <ImageView
            android:layout_width="364dp"
            android:layout_height="237dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/bhopal">

        </ImageView>

        <Button
            android:id="@+id/bhopal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="0dp"
            android:text="Bhopal"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:src="@drawable/image"
            android:layout_gravity="center">

        </ImageView>

        <Button
            android:id="@+id/indore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Indore"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="272dp"
            android:layout_gravity="center"
            android:paddingBottom="0dp"
            android:src="@drawable/gwalior">

        </ImageView>

        <Button
            android:id="@+id/gwalior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gwalior"
            android:paddingTop="0dp"
            android:layout_marginTop="0dp"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="238dp"
            android:layout_gravity="center"
            android:padding="20dp"
            android:src="@drawable/jabalpur">

        </ImageView>

        <Button
            android:id="@+id/jabalpur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/jabalpur"
            android:textSize="15sp"/>



    </LinearLayout>

</ScrollView>
